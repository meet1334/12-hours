<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EJS PRODUCTS</title>
</head>
<style>
    .border {
        border: 2px solid black;
        background-color: bisque;
        margin-top: 2px 5px;
        margin-left: 2px 5px;
        width: 350px;
        padding: 5px 10px;
        margin-bottom: 5px 10px;
    }

    .delete {
        border: 5px solid black;
        background-color: black;
        color: white !important;
        border-radius: 70px 70px;
    }
</style>
<script type="text/javascript">
    const deleteProduct = async (id) => {
        console.log(id);
        const response = await fetch('/api/products/' + id, {
            method: 'DELETE',
        });
        const doc = await response.json();
        console.log(doc);
        const el = document.getElementById(doc.id);
        el.remove();
    }
</script>

<body style=" background-color: antiquewhite;">
    <h1>Product</h1>
    <div>
        <%for(let product of products){%>
            <% if(product){ %>

                <div class="border">

                    <h2>Title:<%= product.title %>
                            <span id="<%=product._id%>" onclick="deleteProduct('<%=product._id%>')"
                                class="delete">X</span>
                    </h2>
                    <image src="<%= product.thumbnail %>" width="100px" height="100px"></image>
                    <h3>Rating:<%= product.rating %>
                    </h3>
                    <h3>Price:<%= product.price %>
                    </h3>
                    <h3>Quantity:<%= product.stock %>
                    </h3>
                </div>
                <% } %>
                    <% } %>
    </div>
</body>

</html>